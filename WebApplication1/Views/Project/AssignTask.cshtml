@model WebApplication1.Models.Task
@{
    ViewData["Title"] = "Assign Task";
}

<h2>Assign New Task</h2>

<form asp-action="AssignTask" method="post">
    <input type="hidden" asp-for="ProjectId" />

    <div class="form-group">
        <label asp-for="Description">Task Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority">Priority</label>
        <select asp-for="Priority" class="form-control">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="EstimatedTime">Estimated Time (hours)</label>
        <input asp-for="EstimatedTime" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Assign Task</button>
    <a href="@Url.Action("Projects", "Home")" class="btn btn-secondary">Cancel</a>
</form>