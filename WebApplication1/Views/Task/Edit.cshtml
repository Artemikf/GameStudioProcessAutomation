@model WebApplication1.Models.Task

@{
    ViewData["Title"] = "Редактирование задачи";
}

<div class="form-container">
    <div class="form-header">
        <h2>Редактирование задачи</h2>
    </div>

    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Description" class="form-label">Описание задачи *</label>
            <textarea asp-for="Description" class="form-control" rows="3"
                      placeholder="Опишите задачу..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProjectId" class="form-label">Проект *</label>
                    <select asp-for="ProjectId" class="form-control" asp-items="@(new SelectList(ViewBag.Projects, "Id", "Name"))">
                        <option value="">Выберите проект</option>
                    </select>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AssignedEmployeeId" class="form-label">Исполнитель</label>
                    <select asp-for="AssignedEmployeeId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "Id", "FirstName"))">
                        <option value="">Не назначен</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Priority" class="form-label">Приоритет *</label>
                    <select asp-for="Priority" class="form-control">
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Status" class="form-label">Статус *</label>
                    <select asp-for="Status" class="form-control">
                        <option value="New">New</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="EstimatedTime" class="form-label">Время (часы) *</label>
                    <input asp-for="EstimatedTime" class="form-control" type="number" min="1" />
                    <span asp-validation-for="EstimatedTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Дата создания</label>
            <input class="form-control" value="@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")" readonly />
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}