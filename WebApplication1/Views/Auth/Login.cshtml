@model WebApplication1.Models.LoginModel

@{
    ViewData["Title"] = "Вход в систему";
}

<div class="form-container" style="max-width: 400px;">
    <div class="form-header">
        <h2>🔐 Вход в систему</h2>
        <p class="lead">Введите ваши учетные данные</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Username" class="form-label">Имя пользователя</label>
            <input asp-for="Username" class="form-control" placeholder="Введите имя пользователя" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg w-100">Войти</button>
        </div>

        <div class="text-center mt-3">
            <p>Нет аккаунта? <a href="@Url.Action("Register")">Зарегистрироваться</a></p>
        </div>
    </form>
</div>