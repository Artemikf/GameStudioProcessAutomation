@model IEnumerable<WebApplication1.Models.Project>

@{
    ViewData["Title"] = "Projects Management";
}

<div class="table-container">
    <div class="form-header">
        <h2>Управление проектами</h2>
        <p class="lead">Фильтрация, сортировка и управление игровыми проектами</p>
    </div>

    <!-- Сообщения -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- ПАНЕЛЬ ФИЛЬТРОВ И СОРТИРОВКИ -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <!-- Поиск -->
                <div class="col-md-4">
                    <label for="searchString" class="form-label">Поиск по названию</label>
                    <input type="text" class="form-control" id="searchString" name="searchString"
                           value="@ViewData["SearchString"]" placeholder="Введите название...">
                </div>

                <!-- Фильтр по статусу -->
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Фильтр по статусу</label>
                    <select class="form-control" id="statusFilter" name="statusFilter">
                        <option value="">Все статусы</option>
                        @foreach (var status in ViewBag.Statuses)
                        {
                            <option value="@status" selected="@(ViewData["StatusFilter"]?.ToString() == status)">
                                @status
                            </option>
                        }
                    </select>
                </div>

                <!-- Кнопки действий -->
                <div class="col-md-5 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Применить фильтры</button>
                    <a href="@Url.Action("Projects")" class="btn btn-secondary me-2">Сбросить</a>
                    <a href="@Url.Action("CreateProject")" class="btn btn-success">+ Новый проект</a>
                </div>
            </form>
        </div>
    </div>

    <!-- ПАНЕЛЬ СОРТИРОВКИ -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Список проектов (@Model.Count())</h5>
        <div class="btn-group">
            <a href="@Url.Action("Projects", new { sortOrder = ViewData["NameSortParam"], statusFilter = ViewData["StatusFilter"], searchString = ViewData["SearchString"] })"
               class="btn btn-outline-primary btn-sm">
                Сортировать по названию
            </a>
            <a href="@Url.Action("Projects", new { sortOrder = ViewData["BudgetSortParam"], statusFilter = ViewData["StatusFilter"], searchString = ViewData["SearchString"] })"
               class="btn btn-outline-primary btn-sm">
                Сортировать по бюджету
            </a>
            <a href="@Url.Action("Projects", new { sortOrder = ViewData["DateSortParam"], statusFilter = ViewData["StatusFilter"], searchString = ViewData["SearchString"] })"
               class="btn btn-outline-primary btn-sm">
                Сортировать по дате
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p>Проекты не найдены.</p>
            <a href="@Url.Action("CreateProject")" class="btn btn-primary">Создать первый проект</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Название</th>
                        <th>Бюджет</th>
                        <th>Дедлайн</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>@project.Id</td>
                            <td>
                                <strong>@project.Name</strong>
                            </td>
                            <td>$@project.Budget.ToString("N0")</td>
                            <td>@project.Deadline.ToString("dd.MM.yyyy")</td>
                            <td>
                                <form method="post" action="@Url.Action("UpdateProjectStatus")" class="d-inline">
                                    <input type="hidden" name="id" value="@project.Id" />
                                    <select name="status" onchange="this.form.submit()"
                                            class="form-select form-select-sm @GetStatusClass(project.Status)">
                                        <option value="Planning" selected="@(project.Status == "Planning")">Planning</option>
                                        <option value="Development" selected="@(project.Status == "Development")">Development</option>
                                        <option value="Testing" selected="@(project.Status == "Testing")">Testing</option>
                                        <option value="Completed" selected="@(project.Status == "Completed")">Completed</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <!-- Кнопка Детали -->
                                    <a href="@Url.Action("ProjectDetails", new { id = project.Id })"
                                       class="btn btn-info btn-sm" title="Детали">
                                        👁️ Детали
                                    </a>
                                    <!-- Кнопка Редактировать -->
                                    <a href="@Url.Action("EditProject", new { id = project.Id })"
                                       class="btn btn-warning btn-sm" title="Редактировать">
                                        ✏️ Изменить
                                    </a>
                                    <!-- Кнопка Удалить -->
                                    <a href="@Url.Action("DeleteProject", new { id = project.Id })"
                                       class="btn btn-danger btn-sm" title="Удалить">
                                        🗑️ Удалить
                                    </a>
                                    <!-- Кнопка Добавить задачу -->
                                    <a href="@Url.Action("AssignTask", "Project", new { projectId = project.Id })"
                                       class="btn btn-success btn-sm" title="Добавить задачу">
                                        📋 Задача
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Planning" => "bg-secondary text-white",
            "Development" => "bg-primary text-white",
            "Testing" => "bg-warning text-dark",
            "Completed" => "bg-success text-white",
            _ => "bg-secondary text-white"
        };
    }
}