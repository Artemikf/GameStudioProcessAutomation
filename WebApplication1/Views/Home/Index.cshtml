@{
    ViewData["Title"] = "Home";
}

<div class="form-container text-center">
    <div class="form-header">
        <h1>Game Development Company</h1>
        <p class="lead">Automation System for managing game development projects</p>
    </div>

    <div class="row mt-4">

        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3>Project Management</h3>
                    <p>Create and manage game development projects, assign teams, and track progress.</p>
                    <a href="@Url.Action("CreateProject")" class="btn btn-primary btn-gradient">Create Project</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3>Team Coordination</h3>
                    <p>Manage development teams including designers, developers, artists, and testers.</p>
                    <a href="@Url.Action("Projects")" class="btn btn-primary btn-gradient">View Projects</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3>Task Tracking</h3>
                    <p>Assign tasks, track progress, and manage deadlines for all team members.</p>
                    <a href="@Url.Action("Index", "Task")" class="btn btn-primary btn-gradient">View Tasks</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3>Project Statistics</h3>
                    <p>Calculate project statistics</p>
                    <a href="@Url.Action("ProjectStatistics")" class="btn btn-primary btn-gradient">Project Statistics</a>
                </div>
            </div>
        </div>

    </div>
</div>
