@using WebApplication1.Services
@inject IAuthService AuthService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game Development Company</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Твои стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">GameDev Company</a>
            <div class="navbar-nav">
                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                <a class="nav-link" href="@Url.Action("Projects", "Home")">Projects</a>
                <a class="nav-link" href="@Url.Action("CreateProject", "Home")">Create Project</a>
                <a class="nav-link" href="@Url.Action("ProjectStatistics", "Home")">Statistics</a>

                @if (AuthService.IsAuthenticated())
                {
                    @if (AuthService.IsAdmin())
                    {
                        <a class="nav-link" href="@Url.Action("CreateProject", "Home")">Create Project</a>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            👤 @AuthService.GetCurrentUsername()
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Profile", "Auth")">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="@Url.Action("Logout", "Auth")" class="d-inline">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a>
                    <a class="nav-link" href="@Url.Action("Register", "Auth")">Register</a>
                }
            </div>
        </div>
    </nav>

    <div class="container-centered">
        @RenderBody()
    </div>

    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>