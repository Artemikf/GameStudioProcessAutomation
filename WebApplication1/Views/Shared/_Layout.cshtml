<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game Development Company</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">GameDev Company</a>
            <div class="navbar-nav">
                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                <a class="nav-link" href="@Url.Action("Projects", "Home")">Projects</a>
                <a class="nav-link" href="@Url.Action("CreateProject", "Home")">Create Project</a>
                <a class="nav-link" href="@Url.Action("ProjectStatistics", "Home")">Statistics</a>
            </div>
        </div>
    </nav>

    <div class="container-centered">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>